@using sepetteYemek.Models.siniflar
@model List<Cariler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}
<br />

<table class="table table-striped">
    <tr>
        <th>Cari</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>Mail</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var k in Model)
    {

        <tr>

            <td>
                @k.CariId

            </td>
            <td>
                @k.CariAd
            </td>
            <td>
                @k.CariSoyad
            </td>
            <td>
                @k.CariSehir
            </td>
            <td>
                @k.CariMail
            </td>
            <td>@Html.ActionLink("Sil", "CariSil", new { id = k.CariId }, new { @class = "btn btn-danger", onclick = "return confirm('Gerçekten Silmek İstiyor Musunuz?')" })</td>

            @*<td><a href="/Cariler/CariSil/@k.CariId" class="btn btn-danger">Sil</a></td>*@
            <td><a href="/Cariler/CariGetir/@k.CariId" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Cariler/MusteriSatis/@k.CariId" class="btn btn-success" style="background-color:blueviolet">Satış Geçmişi</a></td>
        </tr>
    }

</table>

<a href="/Cariler/YeniCari/" class="btn btn-info">Cari Ekle</a>
