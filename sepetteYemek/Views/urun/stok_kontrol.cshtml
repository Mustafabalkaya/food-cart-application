
@{
    ViewBag.Title = "stok_kontrol";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

@model List<sepetteYemek.Models.siniflar.urunler>

@{
    ViewBag.Title = "stokgetir";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}


<h2>Stokta Olmayan Ürünler</h2>

@if (Model.Count == 0)
{
    <p>Stokta olan ürün yok.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Ürün ID</th>
                <th>Ürün Adı</th>
                <th>Marka</th>
                <th>Stok</th>
                <th>Alış Fiyatı</th>
                <th>Satış Fiyatı</th>
                <th>Durum</th>
                <th>Kategori Adı</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var urun in Model)
            {
                <tr>
                    <td>@urun.Urunid</td>
                    <td>@urun.UrunAd</td>
                    <td>@urun.Marka</td>
                    <td>@urun.Stok</td>
                    <td>@urun.AlisFiyat</td>
                    <td>@urun.SatisFiyat</td>
                    <td>@urun.Durum</td>
                    <td>@urun.Kategori.KategoriAd</td>
                </tr>
            }
        </tbody>
    </table>
}

